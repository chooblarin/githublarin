<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp">

        <TextView
            android:id="@+id/text_full_name_repository"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_medium"
            android:textColor="@color/cbr_color_100"
            android:textSize="16sp"
            tools:text="facebook / stetho" />

        <TextView
            android:id="@+id/text_description_repository"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/text_full_name_repository"
            android:layout_marginBottom="@dimen/space_medium"
            android:layout_marginLeft="@dimen/space_medium"
            android:layout_marginRight="@dimen/space_medium"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/cbr_color_light_gray"
            android:textSize="14sp"
            tools:text="Stetho is a debug bridge for Android applications, enabling the powerful Chrome Developer Tools and much more." />
    </RelativeLayout>
</layout>
