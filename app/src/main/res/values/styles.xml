<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/cbr_color_primary</item>
        <item name="colorPrimaryDark">@color/cbr_color_dark</item>
        <item name="colorAccent">@color/cbr_color_accent</item>
        <item name="android:windowBackground">@color/cbr_color_window_background</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
